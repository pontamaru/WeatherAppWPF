<UserControl x:Class="WeatherAppWpf.Views.ThreeDaysWeatherView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherAppWpf.Views"
		mc:Ignorable="d"
        Height="550" Width="400">
	<!--<Window.Resources>
		--><!-- 演算子ボタンのスタイル --><!--
		<Style x:Key="OperatorButtonStyle" TargetType="Button">
			<Setter Property="Command" Value="{Binding PushOperatorCommand}"/>
			<Setter Property="Grid.Column" Value="3"/>
			<Setter Property="FontSize" Value="30"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="FontStyle" Value="Normal"/>
			<Setter Property="BorderBrush" Value="#FFB5B5B5"/>
		</Style>
		--><!-- 数字ボタンのスタイル --><!--
		<Style x:Key="NumButtonStyle" TargetType="Button">
			<Setter Property="Command" Value="{Binding PushNumCommand}"/>
			<Setter Property="FontSize" Value="30"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="FontStyle" Value="Normal"/>
			<Setter Property="Background" Value="White"/>
			<Setter Property="BorderBrush" Value="#FFB5B5B5"/>
		</Style>
	</Window.Resources>
	<StackPanel>
		--><!-- 入力表示 --><!--
		<Viewbox Height="32">
			<TextBlock x:Name="SubView" Text="{Binding SubView}" 
				   TextWrapping="NoWrap"
				   FontSize="24" 
				   HorizontalAlignment="Left" 
				   Margin="0,20,0,0"/>
		</Viewbox>
		<Border BorderBrush="Black" BorderThickness="0,1,0,1" Height="60">
			<Viewbox Margin="0,0,0,10" Height="41">
				<TextBlock x:Name="MainView" Text="{Binding MainView}" 
				   TextWrapping="NoWrap"
				   FontSize="30" 
				   HorizontalAlignment="Left" 
				   Height="39"/>
			</Viewbox>
		</Border>
		--><!-- 入力ボタン --><!--
		<Grid Height="400">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition/>
				<RowDefinition/>
				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			--><!-- 記号ボタン配置 --><!--
			<Button x:Name="AC" Content="AC"
                    Command="{Binding PushAllClearCommand}" FontSize="30" FontWeight="Bold" Background="#FFFF8080" BorderBrush="#FFFF8080"/>
			<Button x:Name="C" Content="C"
					Command="{Binding PushClearCommand}" FontSize="30" FontWeight="Bold" Background="#FFDCEEFF" BorderBrush="#FFDCEEFF" Grid.Column="1"/>
			<Button x:Name="Delete" Content="↩"
					Command="{Binding PushDeleteCommand}" FontSize="30" FontWeight="Bold" Grid.Column="2" BorderBrush="#FFDBFFE1" Background="#FFDBFFE1"/>
			<Button x:Name="Equal" Content="="
					Command="{Binding PushEqualCommand}" FontSize="30" FontWeight="Bold" Grid.Column="3" BorderBrush="#FFB5B5B5" Grid.Row="4" Background="#FFFFFED9"/>
			<Button x:Name="Plus_Minus" Content="±"
					Command="{Binding PushInvertCommand}" FontSize="30" FontWeight="Bold" Grid.Row="4" Background="White" BorderBrush="#FFB5B5B5"/>
			--><!-- 演算子ボタン配置 --><!--
			<Button Style="{DynamicResource OperatorButtonStyle}" x:Name="Division"		  Content="÷" CommandParameter="/" Grid.Row="0"/>
			<Button Style="{DynamicResource OperatorButtonStyle}" x:Name="Multiplication" Content="×" CommandParameter="*" Grid.Row="1"/>
			<Button Style="{DynamicResource OperatorButtonStyle}" x:Name="Subtraction"	  Content="-"  CommandParameter="-" Grid.Row="2"/>
			<Button Style="{DynamicResource OperatorButtonStyle}" x:Name="Addition"		  Content="+"  CommandParameter="+" Grid.Row="3" BorderBrush="#FFA2A2A2"/>
			--><!-- 数字ボタン配置 --><!--
			<Button Style="{DynamicResource NumButtonStyle}" x:Name="Comma" Content="." CommandParameter="." Grid.Row="4" Grid.Column="2"/>
			<Button Style="{DynamicResource NumButtonStyle}" x:Name="_0"	Content="0"	CommandParameter="0" Grid.Row="4" Grid.Column="1"/>
			<Button Style="{DynamicResource NumButtonStyle}" x:Name="_1"	Content="1"	CommandParameter="1" Grid.Row="3" Grid.Column="0"/>
			<Button Style="{DynamicResource NumButtonStyle}" x:Name="_2"	Content="2"	CommandParameter="2" Grid.Row="3" Grid.Column="1"/>
			<Button Style="{DynamicResource NumButtonStyle}" x:Name="_3"	Content="3"	CommandParameter="3" Grid.Row="3" Grid.Column="2"/>
			<Button Style="{DynamicResource NumButtonStyle}" x:Name="_4"	Content="4"	CommandParameter="4" Grid.Row="2" Grid.Column="0"/>
			<Button Style="{DynamicResource NumButtonStyle}" x:Name="_5"	Content="5"	CommandParameter="5" Grid.Row="2" Grid.Column="1"/>
			<Button Style="{DynamicResource NumButtonStyle}" x:Name="_6"	Content="6"	CommandParameter="6" Grid.Row="2" Grid.Column="2"/>
			<Button Style="{DynamicResource NumButtonStyle}" x:Name="_7"	Content="7"	CommandParameter="7" Grid.Row="1" Grid.Column="0"/>
			<Button Style="{DynamicResource NumButtonStyle}" x:Name="_8"	Content="8"	CommandParameter="8" Grid.Row="1" Grid.Column="1"/>
			<Button Style="{DynamicResource NumButtonStyle}" x:Name="_9"	Content="9"	CommandParameter="9" Grid.Row="1" Grid.Column="2"/>
		</Grid>
	</StackPanel>
	--><!-- キー入力設定 --><!--
	<Window.InputBindings>
		<KeyBinding Key="Esc" Command="{Binding PushAllClearCommand}"/>
		<KeyBinding Key="Back" Command="{Binding PushDeleteCommand}"/>
		<KeyBinding Key="Return" Command="{Binding PushEqualCommand}"/>

		<KeyBinding Key="Divide" Command="{Binding PushOperatorCommand}" CommandParameter="/"/>
		<KeyBinding Key="OemQuestion" Command="{Binding PushOperatorCommand}" CommandParameter="/"/>
		<KeyBinding Key="Multiply" Command="{Binding PushOperatorCommand}" CommandParameter="*"/>
		<KeyBinding Key="OemSemicolon" Command="{Binding PushOperatorCommand}" CommandParameter="*"/>
		<KeyBinding Key="Subtract" Command="{Binding PushOperatorCommand}" CommandParameter="-"/>
		<KeyBinding Key="OemMinus " Command="{Binding PushOperatorCommand}" CommandParameter="-"/>
		<KeyBinding Key="Add" Command="{Binding PushOperatorCommand}" CommandParameter="+"/>
		<KeyBinding Key="Oemplus" Command="{Binding PushOperatorCommand}" CommandParameter="+"/>

		<KeyBinding Key="OemPeriod" Command="{Binding PushNumCommand}" CommandParameter="."/>
		<KeyBinding Key="Decimal" Command="{Binding PushNumCommand}" CommandParameter="."/>
		<KeyBinding Key="D0" Command="{Binding PushNumCommand}" CommandParameter="0"/>
		<KeyBinding Key="NumPad0" Command="{Binding PushNumCommand}" CommandParameter="0"/>
		<KeyBinding Key="D1" Command="{Binding PushNumCommand}" CommandParameter="1"/>
		<KeyBinding Key="NumPad1" Command="{Binding PushNumCommand}" CommandParameter="1"/>
		<KeyBinding Key="D2" Command="{Binding PushNumCommand}" CommandParameter="2"/>
		<KeyBinding Key="NumPad2" Command="{Binding PushNumCommand}" CommandParameter="2"/>
		<KeyBinding Key="D3" Command="{Binding PushNumCommand}" CommandParameter="3"/>
		<KeyBinding Key="NumPad3" Command="{Binding PushNumCommand}" CommandParameter="3"/>
		<KeyBinding Key="D4" Command="{Binding PushNumCommand}" CommandParameter="4"/>
		<KeyBinding Key="NumPad4" Command="{Binding PushNumCommand}" CommandParameter="4"/>
		<KeyBinding Key="D5" Command="{Binding PushNumCommand}" CommandParameter="5"/>
		<KeyBinding Key="NumPad5" Command="{Binding PushNumCommand}" CommandParameter="5"/>
		<KeyBinding Key="D6" Command="{Binding PushNumCommand}" CommandParameter="6"/>
		<KeyBinding Key="NumPad6" Command="{Binding PushNumCommand}" CommandParameter="6"/>
		<KeyBinding Key="D7" Command="{Binding PushNumCommand}" CommandParameter="7"/>
		<KeyBinding Key="NumPad7" Command="{Binding PushNumCommand}" CommandParameter="7"/>
		<KeyBinding Key="D8" Command="{Binding PushNumCommand}" CommandParameter="8"/>
		<KeyBinding Key="NumPad8" Command="{Binding PushNumCommand}" CommandParameter="8"/>
		<KeyBinding Key="D9" Command="{Binding PushNumCommand}" CommandParameter="9"/>
		<KeyBinding Key="NumPad9" Command="{Binding PushNumCommand}" CommandParameter="9"/>
	</Window.InputBindings>-->
</UserControl>
