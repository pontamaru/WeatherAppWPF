<UserControl x:Class="WeatherAppWpf.Views.TodayWeatherView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherAppWpf.Views"
		mc:Ignorable="d"
        Height="300" Width="250"
		Background="White">
	<Border BorderBrush="Black" BorderThickness="2" CornerRadius="5">
		<StackPanel Margin="5">
			<!--日付-->
			<StackPanel Orientation="Horizontal">
				<Label Content="今日の天気" FontWeight="Bold"/>
				<Label x:Name="TodayDateAndWeek" Content="{Binding TodayDateAndWeek}"/>
				<Button Content="更新" Command="{Binding UpdateWeatherCommand}" Margin="10,0,0,0"/>
			</StackPanel>
			<Label x:Name="TargetCity" Content="{Binding TargetCity}" FontWeight="Bold"/>
			<Separator Background="LightGray" Height="1"/>
			<!--お天気情報-->
			<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
					</Grid.RowDefinitions>
					<Label x:Name="TodayWeather" Content="{Binding TodayWeather}" Grid.Row="0"/>
					<Label x:Name="TodayTemperature"  Content="{Binding TodayTemperature}" Grid.Row="1"/>
					<Label x:Name="TodayRainProbability"  Content="{Binding TodayRainProbability}" Grid.Row="2"/>
			</Grid>
		</StackPanel>
	</Border>
</UserControl>
	
