<Window x:Class="WeatherAppWpf.Views.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:WeatherAppWpf.ViewModels"
		xmlns:views="clr-namespace:WeatherAppWpf.Views"
		mc:Ignorable="d"
		Title="お天気アプリ" Height="400" Width="300">
	<TabControl>
		<TabItem Header="今日の天気">
			<Grid Background="#FFD5FCFF">
				<views:TodayWeatherView x:Name="TodayWeatherView" Margin="20"/>
			</Grid>
		</TabItem>
		<TabItem Header="3日間の天気">
			<Grid Background="#FFDFFFDE">
				<views:ThreeDaysWeatherView x:Name="ThreeDaysWeatherView" Margin="20"/>
			</Grid>
		</TabItem>
		<TabItem Header="設定">
			<Grid Background="#FFE5E5E5">
				<views:SettingsView x:Name="SettingsView" Margin="20"/>
			</Grid>
		</TabItem>
	</TabControl>
</Window>
